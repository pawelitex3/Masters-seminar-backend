{
  "openapi": "3.0.2",
  "info": {
    "description": "API that returns a step list of graph algorithm operation.",
    "version": "1.0.0",
    "title": "Graph-API",
    "contact": {
      "email": "paweldekowski@mat.umk.pl"
    },
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "paths": {
    "/api/BFS": {
        "post": {
          "tags": [
            "Search algorithms"
          ],
          "parameters": [
            {
              "in": "body",
              "name": "BFS",
              "required": true,
              "description": "Returns a step list of BFS",
              "schema": {
                "$ref": "#/components/schemas/graph_input"
              },
              "examples": {
                "graph": {
                  "value": {
                    "start_vertex": 0,
                    "vertices": [
                      0, 1, 2, 3, 4, 5
                    ],
                    "adjacency_list": [
                      [
                        2
                      ],
                      [
                          2, 3
                      ],
                      [
                          0, 1, 3, 4
                      ],
                      [
                          1, 2, 5
                      ],
                      [
                          2, 5
                      ],
                      [
                          3, 4
                      ]
                    ]
                  }
                }
              }
            }
          ],
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/graph_input"
                },
                "examples": {
                  "graph": {
                    "value": {
                      "start_vertex": 0,
                      "vertices": [
                        0, 1, 2, 3, 4, 5
                      ],
                      "adjacency_list": [
                        [
                          2
                        ],
                        [
                            2, 3
                        ],
                        [
                            0, 1, 3, 4
                        ],
                        [
                            1, 2, 5
                        ],
                        [
                            2, 5
                        ],
                        [
                            3, 4
                        ]
                      ]
                    }
                  }
                }
              }
            }
          },
          "summary": "Returns a step list of BFS",
          "responses": {
            "200": {
              "description": "OK",
              "schema": {
                "$ref": "#/components/schemas/BFS_output"
              }
            }
          }
        }
    },
